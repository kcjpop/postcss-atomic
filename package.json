{
  "name": "postcss-atomic",
  "version": "0.0.0",
  "description": "PostCSS plugin to generate atomic CSS classes, largely use Tailwind vocabulary",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "atomic-css"
  ],
  "scripts": {
    "build": "postcss -o build.css styles.css && cat build.css",
    "test": "jest --verbose && eslint .",
    "test:ci": "jest && eslint .",
    "test:coverage": "jest --coverage"
  },
  "main": "src/index.js",
  "author": "An Cao <kcj.pop.com@gmail.com>",
  "license": "MIT",
  "repository": "kcjpop/postcss-atomic",
  "dependencies": {
    "css.escape": "1.5.1",
    "lodash.flatmap": "4.5.0",
    "postcss": "7.0.27",
    "tailwindcss": "1.2.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "36.1.1",
    "coveralls": "3.0.11",
    "eslint": "6.8.0",
    "eslint-config-postcss": "4.0.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-es5": "1.5.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jest": "23.8.2",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-prefer-let": "1.0.1",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-standard": "4.0.1",
    "eslint-plugin-unicorn": "17.2.0",
    "jest": "25.1.0",
    "postcss-cli": "7.1.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
